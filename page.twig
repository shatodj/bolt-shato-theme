{% extends "record.twig" %}
{% import "twig/partials/_macros.twig" as m %}

{% block stylesheet %}
    {# Defer loading of non-critical styles #}
    {{ m.stylesheet_inline('dist/css/page-bundle.css') }}
{% endblock %}

{% block scripts %}
    {{ m.script('dist/js/page-bundle.js') }}
{% endblock %}

{% block document %}
	{% set htmlClass = theme.layout.sections.index.is_navbar_fixed|default == true ? "has-navbar-fixed-top" %}
	{{ parent() }}
{% endblock %}

{# Standard SECTIONS #}
{% block sections %}
    {{ m.sectionsByRecord(record) }}
    {{ m.sectionsByGroup("page") }}
{% endblock %}

