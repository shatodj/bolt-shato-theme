{% extends "twig/contentblock/content.twig" %}

{% block contentlink_block %}

	{% if content|default is empty %}
		{{ __("No Content") }}
	{% else %}
		<div class="plan-header">{{ content|title|default }}</div>
		<div class="plan-price">
			<span class="plan-price-amount">
				<span class="plan-price-currency">&euro;</span> {{ content.price|default(0) }}</span></div>
		<div class="plan-items">
			<div class="plan-item content">
				{{ content.teaser|default }}
			</div>
		</div>
		<div class="plan-footer">
			<a href="{{ content|link }}" class="button is-fullwidth">{{ __("Select") }}</a>
		</div>

	{% endif %}
{% endblock %}
