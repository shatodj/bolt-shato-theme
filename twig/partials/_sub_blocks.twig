{# Content edit button #}
{% block edit_button %}
	<a href="{{ record.editlink() }}" class="button is-info is-outlined">
		{{ __('general.phrase.edit') }}
	</a>
{% endblock %}

{# Regular buy button #}
{% block buy_button %}
    <a class="button {{ class|default("is-primary") }}" href="{{ link|default('#') }}">
        <span class="icon">
            <i class="fas fa-shopping-cart"></i>
        </span>
        <span>{{ __("Add To Cart")}}</span>
    </a>
{% endblock %}

{# Error / Warning block #}
{# Required: message #}
{% block error_block %}
	<div class="notification is-warning">
		{{ message|default }}
	</div>
{% endblock %}

{# The <a href> wrapper #}
{# Required: content, link #}
{# optional: class #}
{% block link_wrapper %}
    {% if link|default is not empty %}
        <a class="{{ class|default }}" href="{{ link }}">
            {{ content|default }}    
        </a>
    {% else %}
        {{ content|default }}
    {% endif %}
{% endblock %}
