{% extends "twig/gallery/_sub_gallery.twig" %}

{% block gallery_image_cells %} 
    <div class="columns is-mobile is-multiline">
        {{ parent() }}
    </div>
{% endblock %}

{% block gallery_image %}
    <div class="column is-6-mobile is-3-desktop">
        <div class="card">
            <div class="card-image">
                {{ parent() }}
            </div>
            {% if image.alt|default is not empty %}    
                <div class="card-content is-overlay is-clipped without-pointer-events">
                    <span class="tag is-info">
                        {{ image.alt|default }}
                    </span> 
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
