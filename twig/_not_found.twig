{% extends 'twig/_record.twig' %}
{% import "twig/partials/_macros.twig" as m %}

{% block stylesheet %}
	{# Defer loading of non-critical styles #}
	{{ m.stylesheet_inline('dist/css/record-bundle.css') }}
{% endblock %}

{% block scripts %}
	{{ m.script('dist/js/record-bundle.js') }}
{% endblock %}

{% block document %}
	{% set htmlClass = theme.layout.sections.listing.is_navbar_fixed|default == true ? "has-navbar-fixed-top" %}
	{{ parent() }}
{% endblock %}

{% block content %}

	{% set sectionClass = "hero is-primary is-medium section-not-found shpr-section" %}

	{% setcontent section = 'section/404-not-found' %}

	{% embed "twig/partials/_sub_section.twig" with {
		section: section,
		extraClass: sectionClass
	} %}
		{% set extraContent %}
			{% include "twig/partials/_sub_search_form.twig" %}
		{% endset %}
	{% endembed %}
{% endblock content %}
