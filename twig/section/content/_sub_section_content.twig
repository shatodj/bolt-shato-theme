{% block section_content %}

	{% if section.slug is defined %}
		<div class="shpr-section-anchor" id="{{ section.slug }}"></div>
	{% endif %}

	{% if section.title|default is not empty or section.content|default is not empty %}
		<div class="block mb-6">
			{% if section.title|default is not empty %}
				<h2 class="title is-3 is-size-4-mobile is-spaced">
					{{ section.title }}
				</h2>
			{% endif %}

			{%- if section.content|default is not empty %}
				<div class="content">
					{{ section.content }}
				</div>
			{% endif -%}
		</div>
	{% endif %}

	{# Embedded field #}
	{%- if section.embedded|default is not empty %}
		{{ section.embedded.html|raw }}
	{% endif %}
	{# Textarea field considered as embedded with raw not sanitized data #}
	{%- if section.embedded_raw|default is not empty %}
		{{ section.embedded_raw|raw }}
	{% endif %}

	{# Showing the listing of contents  #}
	{# If 'contenttemplate' is not present then will be generated by the type of data' #}
    {% include "twig/partials/_sub_section_content_lists_blocks.twig" with {
        section: section
    } %}

	{# showing the gallery if added to the block #}
	{% if section.galleryContent|default is not empty %}
		<section>
			{% include section.galleryTemplate|default("twig/gallery/_sub_gallery.twig") with {
				gallery: section.galleryContent|selected,
			} %}
		</section>
	{% endif %}

	{# Showing links / actions for the Block #}

	{% if section.links|default([])|length > 0 %}
		{% include "twig/partials/_sub_section_links.twig" with { links: section.links, extraClass: "has-text-centered" } %}
	{% endif %}
	
	{# {% if section.links|default([])|length > 0 or shouldShowEdit %}
		<nav class="shpr-actions columns">
			<div class="column has-text-centered">
				{% for link in section.links %}	
					<a href="{{ link.contentlink }}" class="button">{{ link.title|markdown|excerpt(45) }}</a>
				{% endfor %}
				{% if section|edit_link|default %}
					{% with { 'record': section } %}
					{{ block('edit_button', 'blocks.twig') }}
					{% endwith %}
				{% endif %}
			</div>
		</nav>
	{% endif %} #}

{% endblock %}