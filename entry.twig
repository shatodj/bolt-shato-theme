{% extends "record.twig" %}
{% import "twig/partials/_macros.twig" as m %}

{# Content Specific template for 'entry' slug #}

{% block stylesheet %}
    {# Defer loading of non-critical styles #}
    {{ m.stylesheet_inline('dist/css/entry-bundle.css') }}
{% endblock %}

{% block scripts %}
    {{ m.script('dist/js/entry-bundle.js') }}
{% endblock %}

{% block document %}
	{% set htmlClass = theme.layout.sections.record.is_navbar_fixed|default == true ? "has-navbar-fixed-top" %}
	{{ parent() }}
{% endblock %}

{% block record_header %}
    {% set recordMeta %}
        {% include "twig/partials/_record_meta.twig" with {'extended': true} %}
    {% endset %}
    {% include "twig/partials/_record_header.twig" with { extraClass: headerBlockClass, extraContent: recordMeta} %}
{% endblock %}

{% block record_footer %}
    {{ include('twig/partials/_record_footer.twig', { 'record': record }) }}                   
{% endblock %}

{# Recent records #}
{# {% block recent %}
    {% include "twig/partials/_sub_recent_records.twig" %} 
{% endblock %} #}

{# Standard SECTIONS #}
{% block sections %}
    {{ m.sectionsByRecord(record, false) }}
    {{ m.sectionsByGroup("entry", false) }}
{% endblock %}
