{% extends "twig/_record.twig" %}
{% import "twig/partials/_macros.twig" as m %}

{# Content Specific template for 'entry' slug #}

{% block stylesheet %}
    {# Defer loading of non-critical styles #}
    {{ m.stylesheet('dist/css/entry-bundle.css') }}
{% endblock %}

{% block scripts %}
    {{ m.script('dist/js/entry-bundle.js') }}
{% endblock %}

{% block body %}
    <section class="section">
        <div class="container content">
            {% with { 
                'record': record,  
                'repeaters': true,
                'exclude': [ record|image.fieldname|default() ] 
            } %}
            {{ block('sub_fields', 'helpers/_fields.twig') }}
            {% endwith %} 
        </div>
    </section>
{% endblock %}

{# Standard SECTIONS #}
{% block sections %}
    {{ m.sectionsByRecord(record, false) }}
    {{ m.sectionsByGroup("entry", false) }}
{% endblock %}

