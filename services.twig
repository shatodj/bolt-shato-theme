{% extends "twig/_listing.twig" %}
{% import "twig/partials/_macros.twig" as m %}

{% block stylesheet %}
    {# Defer loading of non-critical styles #}
    {{ m.stylesheet_inline('dist/css/services-bundle.css') }}
{% endblock %}

{% block scripts %}
	{{ m.script('dist/js/services-bundle.js') }}
{% endblock %}


{% block list_item %}
    <div class="plan-header">{{ record|title|default }}</div>
    <div class="plan-price">
        <span class="plan-price-amount">
            <span class="plan-price-currency">&euro;</span> {{ record.price|default(0) }}</span></div>
    <div class="plan-items">
        <div class="plan-item">{{ record.teaser|default }}</div>
        {# <div class="plan-item">100 Domains</div>
        <div class="plan-item">-</div>
        <div class="plan-item">-</div> #}
    </div>
    <div class="plan-footer">
        <a href="{{ record|link|default("#") }}" class="button is-fullwidth">{{ __("Select") }}</a>
    </div>
{% endblock %}

{% block records %}
    <div class="pricing-table">
        {% for record in records %}
            <article class="pricing-plan is-primary">
                {{ block("list_item") }}
            </article>
        {% endfor %}
    </div>
{% endblock %}